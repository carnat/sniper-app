# Streamlit Secrets - Portfolio Data Template
# 
# Instructions:
# 1. Copy this file to secrets.toml in the same directory
# 2. Replace the example data with your actual holdings
# 3. Save the file
# 4. Restart your Streamlit app
#
# Note: secrets.toml is in .gitignore and will NOT be pushed to GitHub
# Keep the exact format with brackets and quotes as shown

# ============================================
# US PORTFOLIO
# ============================================
[us_portfolio]
# List your US stock tickers
Ticker = ["AAPL", "GOOGL", "MSFT"]
# Example: Ticker = ["AAPL", "GOOGL", "MSFT", "TSLA"]

# Number of shares for each ticker (must match order above)
Shares = [10.0, 5.0, 15.0]
# Example: Shares = [10.5, 5.0, 15.3, 8.0]

# Average cost per share for each ticker (must match order above)
Avg_Cost = [150.25, 2800.50, 380.00]
# Example: Avg_Cost = [150.25, 2800.50, 380.00, 220.75]

# ============================================
# THAI STOCKS
# ============================================
[thai_stocks]
# List your Thai stock tickers (must end with .BK)
Ticker = ["TISCO.BK", "ADVANC.BK"]
# Example: Ticker = ["TISCO.BK", "ADVANC.BK", "PTT.BK"]

# Number of shares for each ticker (must match order above)
Shares = [100, 50]
# Example: Shares = [100, 50, 200]

# Average cost per share (in THB) for each ticker (must match order above)
Avg_Cost = [95.50, 280.00]
# Example: Avg_Cost = [95.50, 280.00, 35.75]

# ============================================
# VAULT PORTFOLIO (Thai Mutual Funds)
# ============================================
# Add each fund as a separate [[vault_portfolio]] section
# Copy and paste the template below for each fund you own

[[vault_portfolio]]
Code = "SCBNDQ(E)"
Units = 1000
Cost = 13.50
Master = "QQQ"

[[vault_portfolio]]
Code = "SCBS&P500FUND(E)"
Units = 500
Cost = 38.00
Master = "VOO"

# Available Master ETF options:
# - "QQQ" (Nasdaq 100)
# - "VOO" (S&P 500)
# - "VTI" (Total US Stock Market)
# - "SOXX" (Semiconductors)
# - "ICLN" (Clean Energy)
# - "GLD" (Gold)
# - "^SET.BK" (Thai SET Index)
# - "N/A" (No master correlation)

# ============================================
# NEWS & ALERTS CONFIGURATION
# ============================================
# Get your free NewsAPI key at: https://newsapi.org/
[news_alerts]
newsapi_key = "your_free_newsapi_key_here"

# Price alert threshold (% change to trigger alert)
price_alert_threshold = 5  # Alert if price moves Â±5%

# Enable/disable features
enable_price_alerts = true
enable_news_feed = true
enable_earnings_alerts = true

# ============================================
# SEC THAILAND API CONFIGURATION
# ============================================
# Get keys from https://api.sec.or.th/ and keep them private.
[sec_api]
primary_key = "your_sec_primary_key_here"
secondary_key = "your_sec_secondary_key_here"
